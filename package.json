{
  "name": "neba-token",
  "version": "1.0.0",
  "description": "NEBA Token Smart Contract - Phase 1 Implementation",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:fuzz": "hardhat test test/FuzzTests.test.js",
    "test:invariants": "hardhat test test/invariants/",
    "test:fork": "forge test --match-contract ForkCheck",
    "test:storage": "hardhat test test/StorageLayout.test.js",
    "test:phase2-negative": "hardhat test test/Phase2NegativeTests.test.js",
    "test:rate-limiting": "hardhat test test/RateLimitingTests.test.js",
    "test:rate-limiting-simple": "hardhat test test/RateLimitingSimple.test.js",
    "test:cap-immutability": "hardhat test test/CapImmutabilityTests.test.js",
    "test:emergency-mode": "hardhat test test/EmergencyModeTests.test.js",
    "test:emergency-mode-simple": "hardhat test test/EmergencyModeSimple.test.js",
    "monitor:mints": "node scripts/monitor-mints.js",
    "test:sepolia": "hardhat run scripts/testSepoliaDeployment.js --network sepolia",
    "deploy:base-sepolia": "hardhat run scripts/deployBaseSepolia.js --network base-sepolia",
    "deploy:multisig": "hardhat run scripts/deploy-multisig-phase2.js --network base-sepolia",
    "deploy:phase2": "hardhat run scripts/deploy-phase2-complete.js --network base-sepolia",
    "transfer:roles": "hardhat run scripts/transfer-roles-to-multisig.js --network base-sepolia",
    "deploy:circuit-breaker-fixed": "hardhat run scripts/deploy-circuit-breaker-fixed.js --network base-sepolia",
    "deploy:neba-with-snapshots": "hardhat run scripts/deploy-neba-with-snapshots.js --network base-sepolia",
    "deploy:neba-with-validation": "hardhat run scripts/deploy-neba-with-validation.js --network base-sepolia",
    "deploy:validated": "hardhat run scripts/deploy-atomic-validated.js",
    "deploy:validated-local": "hardhat run scripts/deploy-atomic-validated.js --network localhost",
    "deploy:validated-sepolia": "hardhat run scripts/deploy-atomic-validated.js --network sepolia",
    "deploy:validated-base-sepolia": "hardhat run scripts/deploy-atomic-validated.js --network base-sepolia",
    "validate:deployment": "hardhat run scripts/validate-deployment.js",
    "verify:deployment": "hardhat run scripts/verify-deployment.js",
    "verify": "hardhat verify",
    "verify:custom": "hardhat run scripts/verify.js",
    "lint": "npx prettier --write .",
    "audit:slither": "slither contracts/ --config-file slither.config.json",
    "audit:coverage": "hardhat coverage --threshold 95",
    "audit:all": "npm run audit:slither && npm run audit:coverage && npm run test:invariants",
    "ci": "npm run build && npm run lint && npm run audit:slither && npm run test && npm run test:coverage && npm run test:invariants"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "erc20",
    "token",
    "defi",
    "security",
    "compliance"
  ],
  "author": "NEBA Development Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
